<%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>

    <%= f.label :姓（first_name） %>
    <%= f.text_field :first_name, class: 'form-control' ,:placeholder => "新聞" %>

    <%= f.label :名（last_name） %>
    <%= f.text_field :last_name, class: 'form-control' ,:placeholder => "九郎" %>

    <%= f.label :メールアドレス（email） %>
    <%= f.email_field :email, class: 'form-control' ,:placeholder => "news-love@example.com" %>

    <%= f.label :パスワード（password） %>
    <%= f.password_field :password, class: 'form-control',:placeholder => "8桁以上の英数字を入力してください。" %>

    <%= f.label :password_confirmation, "パスワード確認" %>
    <%= f.password_field :password_confirmation, class: 'form-control' ,:placeholder => "上と同じパスワードを入力してください。"%>

    <%= f.submit "登録する", class: "btn btn-primary" %>
<% end %>