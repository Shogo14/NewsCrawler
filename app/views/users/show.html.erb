<% provide(:title, current_user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for current_user %>
        <%= current_user.name %>
      </h1>
    </section>
    <section>
      <%= render 'keywords/keywords_form' %>
      <%= render 'keywords/keywords' %>
    </section>
  </aside>

  <div class="col-md-8">
    <% if current_user.keywords.any? %>
      <h3>Newsタイムライン</h3>
      <%= will_paginate @news %>
      <% @news.each do |news| %>
      <ol class="news">
        <%= render news %>
      </ol>
      <% end %>
      <div class="clear">
      </div>
      <%= will_paginate @news %>
    <% end %>
  </div>
</div>